            if (e.key === 'Enter') {
                const searchTerm = document.getElementById('vocabularySearch').value;
                loadVocabularyData(searchTerm);
            }
        });
        
        // 分类筛选事件
        document.getElementById('categoryFilter').addEventListener('change', applyFilters);
        
        document.getElementById('clearFilterBtn').addEventListener('click', () => {
            document.getElementById('categoryFilter').selectedIndex = 0;
            clearCategoryFilters();
        });
        
        // 全选/取消全选功能
        document.getElementById('selectAllCheckbox').addEventListener('change', function() {
            const checkboxes = document.querySelectorAll('#vocabularyList input[type="checkbox"]');
            checkboxes.forEach(checkbox => {
                checkbox.checked = this.checked;
            });
        });
        
        // 为每个词汇条目添加事件监听器，更新主全选框状态
        const vocabularyList = document.getElementById('vocabularyList');
        const observer = new MutationObserver(() => {
            const checkboxes = vocabularyList.querySelectorAll('input[type="checkbox"]');
            checkboxes.forEach(checkbox => {
                checkbox.addEventListener('change', updateSelectAllCheckbox);
                
                // 恢复之前选中的状态
                if (window.selectedVocabulary && window.selectedVocabulary.includes(checkbox.value)) {
                    checkbox.checked = true;
                }
            });
            
            // 更新全选框状态
            updateSelectAllCheckbox();
        });
        
        observer.observe(vocabularyList, { childList: true, subtree: true });
    }
    
    // 全局存储所有词汇数据
    let allVocabularyData = [];
    // 存储当前选中的分类
    let selectedCategories = [];
    
    async function loadVocabularyData(searchTerm = '') {
        try {
            // Load all translations (private and public)
            const response = await fetch(`/api/translations?search=${encodeURIComponent(searchTerm)}&page=1&per_page=1000&visibility=all`);
            if (!response.ok) {
                throw new Error(currentLanguage === 'en' ? 'Failed to get vocabulary data' : '获取词汇表数据失败');
            }
            const data = await response.json();
            
            // 保存所有数据用于筛选
            allVocabularyData = data.translations;
            
            // 填充分类筛选下拉框
            populateCategoryFilters(allVocabularyData);
            
            // 显示数据
            displayVocabularyData(allVocabularyData);
        } catch (error) {
            console.error('加载词汇表数据失败:', error);
            document.getElementById('vocabularyList').innerHTML = `<p>${currentLanguage === 'en' ? 'Failed to load data' : '加载数据失败'}</p>`;
        }
    }
    
    // 填充分类筛选下拉框
    function populateCategoryFilters(data) {
        const categorySet = new Set();
        
        data.forEach(item => {
            if (item.category) {
                // 分割分类字符串（使用分号分隔）
                const categories = item.category.split(';').map(cat => cat.trim()).filter(cat => cat);
                categories.forEach(cat => categorySet.add(cat));
            }
        });
        
        const categoryFilter = document.getElementById('categoryFilter');
        if (categoryFilter) {
            // 清空选项
            categoryFilter.innerHTML = `<option value="">${currentLanguage === 'en' ? 'All Categories' : '所有分类'}</option>`;
            
            // 添加分类选项
            Array.from(categorySet).sort().forEach(category => {
                const option = document.createElement('option');
                option.value = category;
                option.textContent = category;
                categoryFilter.appendChild(option);
            });
        }
    }
    
    // 应用所有筛选条件
    function applyFilters() {
        let filteredData = [...allVocabularyData];
        
        // 应用分类筛选（并集模式）
        if (selectedCategories.length > 0) {
            filteredData = filteredData.filter(item => {
                if (!item.category) return false;
                
                const itemCategories = item.category.split(';').map(cat => cat.trim()).filter(cat => cat);
                return selectedCategories.some(selectedCat => itemCategories.includes(selectedCat));
            });
        }
        
        displayVocabularyData(filteredData);
    }
    
    function filterVocabularyData() {
        const class1Filter = document.getElementById('class1Filter').value;
        const class2Filter = document.getElementById('class2Filter').value;
        
        let filteredData = allVocabularyData;
        
        if (class1Filter) {
            filteredData = filteredData.filter(item => item.class1 === class1Filter);
        }
        
        if (class2Filter) {
            filteredData = filteredData.filter(item => item.class2 === class2Filter);
        }
        
        displayVocabularyData(filteredData);
    }
    
    function displayVocabularyData(data) {
        const vocabularyList = document.getElementById('vocabularyList');
        if (!data || data.length === 0) {
            vocabularyList.innerHTML = `<p>${currentLanguage === 'en' ? 'No related vocabulary found' : '未找到相关词汇'}</p>`;
            return;
        }
        
        // 添加表头（不包含全选复选框）
        let html = `
            <div style="display: flex; align-items: center; padding: 8px 0; border-bottom: 2px solid #333; font-weight: bold; background-color: #f8f9fa;">
                <div style="width: 30px; padding-left: 10px;">
                </div>
                <div style="flex: 1; display: flex;">
                    <div style="flex: 1; padding: 0 5px; color: #333;">${currentLanguage === 'en' ? 'English' : '英文'}</div>
                    <div style="flex: 1; padding: 0 5px; color: #333;">${currentLanguage === 'en' ? 'Chinese' : '中文'}</div>
                    <div style="flex: 1; padding: 0 5px; color: #333;">${currentLanguage === 'en' ? 'Dutch' : '荷兰语'}</div>
                    <div style="flex: 1; padding: 0 5px; color: #333;">${currentLanguage === 'en' ? 'Category' : '分类'}</div>
                    <div style="flex: 1; padding: 0 5px; color: #333;">${currentLanguage === 'en' ? 'Type' : '类型'}</div>
                </div>
            </div>
        `;
        
        // 添加数据行
        html += data.map(item => `
            <div style="display: flex; align-items: center; padding: 8px 0; border-bottom: 1px solid #eee;">
                <div style="width: 30px; padding-left: 10px;">
                    <input type="checkbox" id="vocab_${item.id}" value="${item.id}" style="margin-right: 10px;" ${window.selectedVocabulary && window.selectedVocabulary.includes(String(item.id)) ? 'checked' : ''}>
                </div>
                <div style="flex: 1; display: flex; font-size: 14px; color: #333;">
                    <div style="flex: 1; padding: 0 5px;">${item.english}</div>
                    <div style="flex: 1; padding: 0 5px;">${item.chinese}</div>
                    <div style="flex: 1; padding: 0 5px;">${item.dutch || ''}</div>
                    <div style="flex: 1; padding: 0 5px;">${item.category || ''}</div>
                    <div style="flex: 1; padding: 0 5px;">${item.is_public ? `<span style="color: #007bff;">${currentLanguage === 'en' ? 'Public' : '公共'}</span>` : (currentLanguage === 'en' ? 'Private' : '私人')}</div>
                </div>
            </div>
        `).join('');
        
        vocabularyList.innerHTML = html;
        
        // 为每个复选框添加事件监听器
        const checkboxes = document.querySelectorAll('#vocabularyList input[type="checkbox"]');
        checkboxes.forEach(checkbox => {
            checkbox.addEventListener('change', updateSelectAllCheckbox);
        });
        
        // 更新主界面的全选框状态
        updateSelectAllCheckbox();
    }
    
    function updateSelectAllCheckbox() {
        const allCheckboxes = document.querySelectorAll('#vocabularyList input[type="checkbox"]');
        const selectAllCheckbox = document.getElementById('selectAllCheckbox');
        const allChecked = allCheckboxes.length > 0 && Array.from(allCheckboxes).every(cb => cb.checked);
        selectAllCheckbox.checked = allChecked;
        
        // 如果没有复选框，确保全选框未选中
        if (allCheckboxes.length === 0) {
            selectAllCheckbox.checked = false;
        }
    }
    
    function closeVocabularyConfig() {
        const modal = document.getElementById('vocabularyModal');
        const overlay = document.getElementById('modalOverlay');
        if (modal) modal.remove();
        if (overlay) overlay.remove();
    }
    
    // 更新词汇表配置按钮显示
    function saveVocabularyConfig() {
        // 获取选中的词汇（排除表头的全选复选框）
        const selectedCheckboxes = document.querySelectorAll('#vocabularyList input[type="checkbox"]:checked:not(#selectAllCheckboxHeader)');
        const selectedVocabIds = Array.from(selectedCheckboxes).map(cb => cb.value);
        
        // 更新按钮文本和样式
        const btn = document.getElementById('vocabularyConfigBtn');
        if (selectedVocabIds.length > 0) {
            btn.textContent = `${getText('configured')} (${selectedVocabIds.length})`;
            btn.classList.remove('btn-secondary');
            btn.classList.add('btn-success');
        } else {
            btn.textContent = getText('notConfigured');
            btn.classList.remove('btn-success');
            btn.classList.add('btn-secondary');
        }
        
        // 保存选中的词汇ID到全局变量，供后续使用
        window.selectedVocabulary = selectedVocabIds;
        
        console.log('保存词汇表配置，选中词汇ID:', selectedVocabIds);
        
        // 关闭窗口
        closeVocabularyConfig();
    }
</script>

</body>
</html>